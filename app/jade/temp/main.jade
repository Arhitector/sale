							option(value="0") Product Name
						select.section__additional__sort__select
							option(value="0") Brand Name
					.section__additional__per-page
						.section__additional__per-page__text Items per page:
						a.section__additional__per-page__count 12
						a.section__additional__per-page__count 20
						a.section__additional__per-page__count 30
