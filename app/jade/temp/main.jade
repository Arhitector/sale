extends ../exten/maintemp.jade

block header
	.black-layer
		.inner
			+list("list-helper", Heading_Top_listMenu, "")
			+list("language", Language_list, "")
			+list("feedback-contact", feedback_list, "")
	.grad-layer
		.inner
			.bag
				img(src="#{img_path}/img-bag.png").bag__img
				.bag__side
					.bag__side__text 0 items in your bag
					.bag__side__button Check Out
			a.logo ecommerce website
			form.search.grad-layer_search
				input(type="text" placeholder="Search website").search__input
				input(type="submit" value="GO").search__button
	.menu-box
		.inner
			+list("main-menu", main_menu, "")

block content
	.content__gradient
	.inner
		.content-inner
			.slider
				img(src="#{img_path}/img1.png").slider__img
				.slider__box
					.slider__box__title product title
					.slider__box__text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras suscipit lacus dapibus ante mattis in adipiscing nibh placerat. Cras bibendum porta diam, non dignissim sapien malesuada vitae. 
			.side-bar
				.side-bar__block.slider__block_yellow
					.side-bar__block__title.grad-layer Browse Categories
					+list("sidebar-menu", sidebar_menu, "")
				.side-bar__block.slider__block_grey
					.side-bar__block__text Join our newsletter list to get the latest updates
					form.side-bar__block__form
						fieldset
							input(type="text").side-bar__block__form__input
							input(type="submit" value="Join Now").side-bar__block__form__submit.grad-layer
					.social
						.social__item.social__item__tw
							.va
								a(href="#").social__item__inner Follow us on Twitter
